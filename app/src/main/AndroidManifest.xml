<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.study.audioapi">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".MyAudioPlayer"
            android:label="@string/title_activity_my_audio_player"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".CustomAudioPlayer">
        </activity>
        <activity android:name=".AudioBrowser">
        </activity>
        <activity android:name=".BackgroundAudio">
        </activity>

        <service
            android:name=".service.BackgroundService"
            android:enabled="true"
            android:exported="true">
        </service>

        <activity android:name=".AudioHttpPlayer">
        </activity>
        <activity android:name=".HTTPAudioPlaylistPlayer">
        </activity>
    </application>

</manifest>